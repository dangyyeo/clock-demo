.wrap
  width 400px
  height 400px
  border 10px solid #ddd
  border-radius 50%
  margin 30px auto
  box-shadow 0 0 20px 3px #444 inset
  position relative
  .origin
    width 20px
    height 20px
    border-radius 50%
    background red
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
  .dot_box
    width inherit
    height inherit
    .dot
      width 40px
      height 40px
      line-height 40px
      text-align center
      position absolute
      font-size 22px
  .clock_line
    position absolute
    z-index 20
    border-radius 2px
  .hour_line
    width 100px
    height 4px
    background-color black
    box-shadow 2px 0px 6px 2px #bbb
    transform-origin 0 50%
    left 50%
    top 50%
  .minute_line
    width 130px
    height 2px
    background-color black
    box-shadow 2px 0px 6px 2px #aaa
    transform-origin 6.69% 50%
    left 48%
    top 50%
  .second_line
    width 170px
    height 1px
    background-color #f60
    box-shadow 2px 0px 6px 2px #aaa
    transform-origin 14.69% 50%
    left 44%
    top 50%
  .date_info
    width 200px
    height 28px
    line-height 28px
    text-align center
    position absolute
    top 230px
    left 100px
    z-index 11
    color #555
    font-weight bold
  .time_info
    width 120px
    height 35px
    line-height 35px
    display flex
    position absolute
    z-index 11
    justify-content center
    top 270px
    left 140px
    &:last-child
      border none
    .time
      width 35px
      height 35px
      color #fff
      font-size 22px
      background #253e3e
      text-align center
      border-right 1px solid #ffffff
  .clock_scale
    width 195px
    height 2px
    transform-origin 0% 50%
    position absolute
    top 200px
    left 200px
  .scale_show
    width 12px
    height 2px
    float left
    background-color #555
  .scale_hidden
    width 183px
    height 2px
    float left

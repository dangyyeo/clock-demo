.wrap
  width 400px
  height 400px
  border 10px solid #8bf2f1
  border-radius 50%
  margin 30px auto
  box-shadow 0 0 20px 3px #444 inset
  position relative
  .origin
    width 20px
    height 20px
    border-radius 50%
    background red
    position absolute
    top 50%
    left 50%
    transform translate(-50%,-50%)
  .dot_box
    width inherit
    height inherit
    .dot
      width 40px
      height 40px
      line-height 40px
      text-align center
      position absolute
      font-size 22px
  .clock_line
    position absolute
    z-index 20
    border-radius 2px
  .hour_line
    width 100px
    height 4px
    background-color black
    box-shadow 2px 0px 6px 2px #bbb
    transform-origin 0 50%
    left 50%
    top 50%
  .minute_line
    width 130px
    height 2px
    background-color black
    box-shadow 2px 0px 6px 2px #aaa
    transform-origin 7.69% 50%
    left 48%
    top 50%
  .second_line
    width 170px
    height 1px
    background-color #f60
    box-shadow 2px 0px 6px 2px #aaa
    transform-origin 11.69% 50%
    left 44%
    top 50%